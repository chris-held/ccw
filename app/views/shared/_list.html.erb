  <% @posts.each do |post| %>
    <section class="article">
      <%= link_to(post) do %>
        <h3><%= post.name %></h2>
        <h4>Filed under: <%= post.category %></h4>
        <p><%= post.created_at %></p>
      <% end %>
    </section>
  <% end %>

  <hr/>

  <p>Looking for more? Check out the <a href="/archive">archives.</a></p>